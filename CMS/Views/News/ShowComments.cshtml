@model IEnumerable<DataLayer.PageComment>



@foreach (var item in Model)
{
    <li>
        <img src="~/Content/img/avatar.jpg">
        <div>
            <span> @item.Name </span>
            <span> @item.CreateDate </span>
        </div>
        <p>
            @item.Comment
        </p>
    </li>
}
