<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> CMS</title>

    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <script src="~/Content/js/jquery-3.4.1.js"></script>
    <script src="/Content/js/jquery.min.js" runat="server"></script>
</head>
@RenderSection("scripts", false)
@Scripts.Render("~/bundles/jquery")
<body>
    <script src="/Content/js/modernizr.js" runat="server"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div>
                <span>امروز : @DateTime.Now</span>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="left-side">
                        <h1><a href="">سایت خبری و اطلاع رسانی</a></h1>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form action="/Search/" method="get" class="border-radius">
                        <input class="border-radius" name="q" type="text" placeholder=" جستجو کنید ... ">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li><a href="/Archive"> تمامی اخبار </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=""> @User.Identity.Name خوش آمدید </a></li>
                    <li><a href="/Account/signout"> خروج </a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }
                <li>
                    @Html.Action("ShowGroupsInDropDown", "News")
                </li>
            </ul>
        </div>
    </nav>
    <!-- End menu -->

    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">
                <section class="category-section border-radius">
                    <header><i class="fa fa-folder-open-o"></i> <h3> پنل مدیر</h3></header>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="thumbnail">
                            <ul>
                                <li>
                                    <a href="/Admin/Pagegroups">مدیریت گروه ها</a>
                                </li>
                                <li>
                                    <a href="/Admin/Pages">مدیریت صفحات</a>
                                </li>
                            </ul>
                        </div>
                    }
                </section>
                @Html.Action("ShowGroups", "News")

                @Html.Action("TopNews", "News")
            </aside>


            <div class="col-md-8 col-sm-12 col-xs-12 ">
                @RenderBody()
            </div>
            @*<ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>*@

        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                        <header> دسترسی سریع </header>
                        <ul>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                            <li><a href=""> پیوندهای سایت </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  سایت</span>
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-paper-plane"></i></a>
                        <a href=""><i class="fa fa-google-plus"></i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/script.js"></script>
</body>
</html>
